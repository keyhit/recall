<!DOCTYPE html>
<html>
  <head>
    <title>Recall</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul>
      <%= render template: 'layouts/logout_navigation' if current_user %>
      <%= render template: 'layouts/login_navigation' if current_user.nil? %>
      <%= render template: 'layouts/user_navigation' if current_user %>
    </ul>
    <p id="notice"><%= notice %></p>
    <%= yield %>
  </body>
</html>
